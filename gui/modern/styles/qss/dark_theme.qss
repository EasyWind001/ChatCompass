/* 
ChatCompass 暗色主题样式(更亮版本)
基于深蓝灰配色方案,更柔和明亮
*/

/* ==================== 全局样式 ==================== */
QWidget {
    background-color: #1A1D29;
    color: #F0F3F7;
    font-family: "Segoe UI", "Microsoft YaHei UI", sans-serif;
    font-size: 14px;
}

/* ==================== 主窗口 ==================== */
QMainWindow {
    background-color: #1A1D29;
}

/* ==================== 按钮 ==================== */
QPushButton {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #33374A;
    border-color: #A8B2C1;
}

QPushButton:pressed {
    background-color: #3D4254;
}

QPushButton:disabled {
    background-color: #22252F;
    color: #5F6B7A;
    border-color: #33374A;
}

/* 主要按钮 */
QPushButton[primary="true"] {
    background-color: #5EB0FF;
    color: #1A1D29;
    border: none;
}

QPushButton[primary="true"]:hover {
    background-color: #80C4FF;
}

QPushButton[primary="true"]:pressed {
    background-color: #3D9EFF;
}

/* ==================== 输入框 ==================== */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    padding: 8px 12px;
    selection-background-color: #5EB0FF;
    selection-color: #1A1D29;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #5EB0FF;
    outline: none;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #22252F;
    color: #5F6B7A;
}

/* ==================== 滚动条 ==================== */
QScrollBar:vertical {
    background-color: #1A1D29;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #3D4254;
    border-radius: 6px;
    min-height: 40px;
}

QScrollBar::handle:vertical:hover {
    background-color: #5F6B7A;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: #1A1D29;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #3D4254;
    border-radius: 6px;
    min-width: 40px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #5F6B7A;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* ==================== 标签页 ==================== */
QTabWidget::pane {
    background-color: #2A2E3A;
    border: 1px solid #3D4254;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #22252F;
    color: #A8B2C1;
    border: 1px solid #3D4254;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border-bottom: 2px solid #5EB0FF;
}

QTabBar::tab:hover:!selected {
    background-color: #33374A;
}

/* ==================== 下拉菜单 ==================== */
QComboBox {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    padding: 6px 12px;
}

QComboBox:hover {
    border-color: #A8B2C1;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(:/icons/chevron-down.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    selection-background-color: #33374A;
    outline: none;
}

/* ==================== 列表/树 ==================== */
QListWidget, QTreeWidget {
    background-color: #1A1D29;
    color: #F0F3F7;
    border: none;
    outline: none;
}

QListWidget::item, QTreeWidget::item {
    padding: 8px;
    border-radius: 4px;
}

QListWidget::item:hover, QTreeWidget::item:hover {
    background-color: #33374A;
}

QListWidget::item:selected, QTreeWidget::item:selected {
    background-color: #2A2E3A;
    color: #F0F3F7;
}

/* ==================== 工具提示 ==================== */
QToolTip {
    background-color: #33374A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    padding: 4px 8px;
}

/* ==================== 菜单 ==================== */
QMenu {
    background-color: #2A2E3A;
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    padding: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 12px;
    border-radius: 2px;
}

QMenu::item:selected {
    background-color: #33374A;
}

QMenu::separator {
    height: 1px;
    background-color: #3D4254;
    margin: 4px 8px;
}

/* ==================== 复选框/单选框 ==================== */
QCheckBox, QRadioButton {
    color: #F0F3F7;
    spacing: 8px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #3D4254;
    background-color: #2A2E3A;
    border-radius: 2px;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #5EB0FF;
}

QCheckBox::indicator:checked {
    background-color: #5EB0FF;
    border-color: #5EB0FF;
}

QRadioButton::indicator {
    border-radius: 8px;
}

QRadioButton::indicator:checked {
    background-color: #5EB0FF;
    border-color: #5EB0FF;
}

/* ==================== 分组框 ==================== */
QGroupBox {
    color: #F0F3F7;
    border: 1px solid #3D4254;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 12px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: #1A1D29;
}

/* ==================== 进度条 ==================== */
QProgressBar {
    background-color: #2A2E3A;
    border: 1px solid #3D4254;
    border-radius: 4px;
    text-align: center;
    color: #F0F3F7;
}

QProgressBar::chunk {
    background-color: #5EB0FF;
    border-radius: 3px;
}

/* ==================== 滑块 ==================== */
QSlider::groove:horizontal {
    background-color: #2A2E3A;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #5EB0FF;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #80C4FF;
}
